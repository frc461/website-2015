<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<div class="container">
<% @pages.each_slice(3) do |group| %>
<div class="row">
<% group.each do |page| %>
		<div class="col-md-3">
            <div class="panel panel-inverse">
  	        <div class="panel-heading"><h3><%= link_to page.name, page %></h3></div>
  				<div class="panel-body"><%= page.content %>
  				</div>
			    </div>
		</div>
		<% end %>
</div>
<% end %>
</div>
<%= link_to 'New Page', new_page_path %>
