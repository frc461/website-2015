<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<table class="table">
  <thead>
    <tr>
      <th width="70%">Name</th>
      <th width="10%"></th>
      <th width="10%"></th>
      <th width="10%"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= link_to 'Show', page, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_page_path(page), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

